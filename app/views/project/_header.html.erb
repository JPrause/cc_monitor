<colgroup>
  <col style="width: 10%" />
  <col style="width: 10%" />
  <% @categories.length.times do %>
    <col style="width: <%= 80 / @categories.length %>%" /><%# 80% = 100% - leading cells width (10% + 10%) %>
  <% end %>
</colgroup>
<thead>
  <tr style="height: 5%">
    <th colspan=2></th>
    <% @categories.each do |h| %>
      <th><%= h.titleize %></th>
    <% end %>
  </tr>
</thead>
